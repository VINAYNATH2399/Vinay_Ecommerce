<%-include('../partials/header')%>
<%-include('../partials/navbar')%>


<div class="row" style="margin-top: 80px;">
    <div class="col-6 mx-auto">
        <form action="/register" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username: </label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Name of username" required>
             
            </div>
            <div class="mb-3">
                <label for="mail" class="form-label">Email: </label>
                <input type="email" class="form-control" name="email" id="mail" placeholder="Your Email here" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
            </div>
            <div class="mb-3">
                <p class="mt-2">Want to register as?</p>
                <div>
                    <label for="role" class="form-label">Buyer: </label>
                    <input type="radio" class="form-check-input" name="role" id="role" placeholder="role of the user" value="buyer" required>
                </div>
                <div>
                    <label for="role" class="form-label">Seller: </label>
                    <input type="radio" class="form-check-input" name="role" id="role" placeholder="role of the user" value="seller" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="gender" class="form-label">Gender: </label>
                <input type="text" class="form-control" name="gender" id="gender" placeholder="Your Gender" required>
            </div>
           
        
           
            <button type="submit" class="btn btn-sm btn-success">SignUp</button>
            <p class="mt-2">Already have an account? <a href="/login">Login</a></p>
        </form>
    </div>
</div>
<%-include('../partials/footer')%>